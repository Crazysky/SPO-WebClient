{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["shared/*"],
      "@server/*": ["server/*"],
      "@client/*": ["client/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/client/**/*", "src/mock-server/**/*"]
}
