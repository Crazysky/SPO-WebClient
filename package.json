{
  "name": "starpeace-online-client",
  "version": "0.1.0",
  "description": "TypeScript web client for Starpeace Online - A browser-based multiplayer tycoon/simulation game",
  "main": "dist/server/server.js",
  "scripts": {
    "build:server": "tsc",
    "build:client": "esbuild src/client/client.ts --bundle --outfile=public/client.js --format=iife",
    "build:terrain-test": "esbuild src/client/terrain-test.ts --bundle --outfile=public/terrain-test.js --format=iife",
    "build": "npm run build:server && npm run build:client && npm run build:terrain-test",
    "start": "node dist/server/server.js",
    "dev": "npm run build && npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "keywords": [
    "starpeace",
    "online",
    "game",
    "multiplayer",
    "tycoon",
    "simulation",
    "websocket",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Crazysky/SPO-WebClient/starpeace-online-client.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@types/three": "^0.182.0",
    "bmp-js": "^0.1.0",
    "cabarc": "^0.4.1",
    "cheerio": "^1.1.2",
    "node-fetch": "^2.7.0",
    "three": "^0.182.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@types/node-fetch": "^2.6.12",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.27.2",
    "jest": "^30.2.0",
    "jsdom": "^27.4.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
